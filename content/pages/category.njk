---
pagination:
  data: collections.categories
  size: 1
  alias: category
permalink: "/category/{{ category | slugify }}/"
---

<h1>Category: {{ category }}</h1>

<div class="post-list">
{% set postsByCategory = collections.posts | filterByCategory(category) %}
{% for post in postsByCategory %}
  <article>
    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    <div class="post-meta">
      <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
      {% if post.data.author %}<span> by {{ post.data.author }}</span>{% endif %}
    </div>
    {% if post.data.description %}
    <p>{{ post.data.description }}</p>
    {% endif %}
  </article>
{% endfor %}
</div>
