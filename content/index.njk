---
layout: base.njk
pagination:
  data: collections.posts
  size: 10
  alias: posts
---

<div class="post-list">
  {% for post in posts %}
  <article>
    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    <div class="post-meta">
      <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
      {% if post.data.author %}<span> by <a href="/author/{{ post.data.author | slugify }}/">{{ authors[post.data.author].name or post.data.author }}</a></span>{% endif %}
    </div>
    {% if post.data.description %}
    <p>{{ post.data.description }}</p>
    {% endif %}
  </article>
  {% endfor %}
</div>

{% if pagination.href.previous or pagination.href.next %}
<nav class="pagination">
  {% if pagination.href.previous %}
    <a href="{{ pagination.href.previous }}">← Newer Posts</a>
  {% else %}
    <span></span>
  {% endif %}
  {% if pagination.href.next %}
    <a href="{{ pagination.href.next }}">Older Posts →</a>
  {% else %}
    <span></span>
  {% endif %}
</nav>
{% endif %}
